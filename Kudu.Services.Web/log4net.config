<?xml version="1.0" encoding="utf-8" ?>
<log4net>
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender,log4net">
        <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
        <file type="log4net.Util.PatternString" value="/var/log/kudulogs/%utcdate{yyyy-MM-dd}_%env{COMPUTERNAME}_scm_docker.log" />
        <param name="RollingStyle" value="Size"/>
        <param name="StaticLogFileName" value="true"/>
        <appendToFile value="true" />
        <maxSizeRollBackups value="10"/>
        <maximumFileSize value="5MB"/>
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date{yyyy-MM-dd-HH:mm:ss.fff} %message%n" />
        </layout>
    </appender>
  <appender name="DeploymentLogAppender" type="log4net.Appender.RollingFileAppender">
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
    <file type="log4net.Util.PatternString" value="/var/log/kudulogs/deployments/%utcdate{yyyy-MM-dd}_%env{COMPUTERNAME}_scm_deployment.log" />
    <param name="RollingStyle" value="Size"/>
    <param name="StaticLogFileName" value="true"/>
    <appendToFile value="true" />
    <maxSizeRollBackups value="10"/>
    <maximumFileSize value="5MB"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{yyyy-MM-ddTHH:mm:ss.fff}Z,%message%n" />
    </layout>
  </appender>
    <root>
        <level value="ALL"/>
        <appender-ref ref="RollingLogFileAppender"/>
    </root>
  <logger name="DeploymentLogger">
    <level value="ALL"/>
    <appender-ref ref="DeploymentLogAppender" />
  </logger>
</log4net>